<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1F5FE"
    android:padding="20dp"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                style="@style/viewParent.headerText.NoMode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Change your password for your security! "
                android:textColor="@color/colorPrimary" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/anyquestion" />
        </LinearLayout>

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/login_bk_color"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout style="@style/parent">

                    <EditText
                        android:id="@+id/edt_old_password"
                        style="@style/modifiedEditText"
                        android:layout_margin="10dp"
                        android:hint="Current Password"
                        android:inputType="textPassword"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout style="@style/parent">

                    <EditText
                        android:id="@+id/edt_new_password1"
                        style="@style/modifiedEditText"
                        android:layout_margin="10dp"
                        android:hint="New Password"
                        android:inputType="textPassword"
                        android:maxLines="1"

                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout style="@style/parent">

                    <EditText
                        android:id="@+id/edt_new_password2"
                        style="@style/modifiedEditText"
                        android:layout_margin="10dp"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/btn_change_password"
                        style="@style/loginButton1"
                        android:layout_height="35dp"
                        android:layout_marginRight="10dp"
                        android:text="Confirm" />

                    <Button
                        android:id="@+id/btn_cancel"
                        style="@style/loginButton1"
                        android:layout_marginStart="10dp"
                        android:layout_height="35dp"
                        android:text="Cancel" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</RelativeLayout>